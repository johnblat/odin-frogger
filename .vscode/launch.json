{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppvsdbg",
            "preLaunchTask": "[Debug] Build",
            "program": "${workspaceFolder}/game.exe",
            "request": "launch",
            "cwd":"${workspaceFolder}",
            "symbolSearchPath": "${workspaceFolder}"
        },
        {
            "name": "Debug Hot Reload",
            "type": "cppvsdbg",
            "preLaunchTask": "Build Hot Reload",
            "program": "${workspaceFolder}/build/hot_reload/game_hot_reload.exe",
            "request": "launch",
            "cwd":"${workspaceFolder}",
            "symbolSearchPath": "${workspaceFolder}"
        }
    ]
}